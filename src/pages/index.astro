
---
import MainLayout from '../layouts/MainLayout.astro';
import NewsList from '../components/NewsList.astro';

const featuredNews = {
  title: 'Titlul principal al știrii',
  summary: 'Rezumatul știrii principale...',
  image: '/assets/featured-news.jpg',
  link: '/news/first-news',
};

const otherNews = [
  { title: 'Altă știre 1', link: '/news/other-news-1' },
  { title: 'Altă știre 2', link: '/news/other-news-2' },
];
---
<MainLayout>
  <section>
    <h2>{featuredNews.title}</h2>
    <img src={featuredNews.image} alt="Imagine știre principală" />
    <p>{featuredNews.summary}</p>
    <a href={featuredNews.link}>Citește mai mult</a>
  </section>
  <NewsList news={otherNews} />
</MainLayout>
